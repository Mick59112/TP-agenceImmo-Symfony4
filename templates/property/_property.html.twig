<div class="card mb-4">
    {% if property.picture %}
        <img src="{{ property.picture.filename | imagine_filter('thumb') }}"
             style="width: 100%;" alt="">
    {% else %}
        <img src="{{ 'images/empty.jpg' | imagine_filter('thumb') }}"
             style="width: 100%;" alt="">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>